  <script>
    function showWish() {
      document.getElementById("wishMessage").style.display = 'block';
    }


    const countdown = document.getElementById("countdown");
    const targetDate = new Date("July 3, 2025 00:00:00").getTime();

  

    setInterval(() => {
      const heart = document.createElement("div");
      heart.className = "heart";
      heart.style.left = Math.random() * 100 + "vw";
      heart.style.animationDuration = 3 + Math.random() * 5 + "s";
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 8000);
    }, 300);

    function blowCandle() {
      document.getElementById("candle").style.display = 'none';
      document.getElementById("wishPopup").style.display = 'block';
    }

    const confessions = [
      "You're the reason I believe in magic.",
      "I still get butterflies when I think of you.",
      "You make my world brighter.",
      "Every day with you feels like a dream."
    ];
    let confessionIndex = 0;
    setInterval(() => {
      document.getElementById("confessionSlider").innerText = confessions[confessionIndex];
      confessionIndex = (confessionIndex + 1) % confessions.length;
    }, 4000);

    // üéÅ Scratch Card Script
    const canvas = document.getElementById("scratchCanvas");
    const ctx = canvas.getContext("2d");
    ctx.fillStyle = "#c0c0c0";
    ctx.fillRect(0, 0, canvas.width, canvas.height);

    let isDrawing = false;
    function getPos(e) {
      const rect = canvas.getBoundingClientRect();
      return {
        x: (e.touches ? e.touches[0].clientX : e.clientX) - rect.left,
        y: (e.touches ? e.touches[0].clientY : e.clientY) - rect.top
      };
    }

    function draw(e) {
      if (!isDrawing) return;
      const pos = getPos(e);
      ctx.globalCompositeOperation = "destination-out";
      ctx.beginPath();
      ctx.arc(pos.x, pos.y, 15, 0, 2 * Math.PI);
      ctx.fill();
    }

    canvas.addEventListener("mousedown", () => isDrawing = true);
    canvas.addEventListener("mouseup", () => isDrawing = false);
    canvas.addEventListener("mousemove", draw);
    canvas.addEventListener("touchstart", () => isDrawing = true);
    canvas.addEventListener("touchend", () => isDrawing = false);
    canvas.addEventListener("touchmove", draw);
  </script>
  

