<script>
  function cutCake() {
    const cake = document.getElementById("cakeImage");
    const message = document.getElementById("cutMessage");

    cake.style.opacity = "0";
    setTimeout(() => {
      cake.src = "assets/cakecut.jpg"; // ‚úÖ Make sure this image exists
      cake.style.opacity = "1";
      message.style.display = "block";
    }, 1000);
  }
</script>


